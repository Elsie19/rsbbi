// <Book> <Section>{:<Verse>{-<Range>}}
total = { SOI ~ set ~ EOI }

WHITESPACE = _{ " " }

set = _{
    book ~ (section ~ (":" ~ verse)?)?
}

book = @{
    (ASCII_ALPHANUMERIC ~ WHITESPACE)? ~ ASCII_ALPHANUMERIC+
}

section = {
    ASCII_ALPHANUMERIC+
}

verse = {
    range
  | number
}

number = { ASCII_DIGIT+ }

range = { ASCII_ALPHANUMERIC+ ~ "-" ~ ASCII_ALPHANUMERIC+ }
